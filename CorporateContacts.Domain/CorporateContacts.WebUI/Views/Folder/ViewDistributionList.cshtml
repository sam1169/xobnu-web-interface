@model List<CorporateContacts.Domain.Entities.CCFieldValue>
@{   
    ViewBag.Title = "Corporate Contacts - DistList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count() > 0)
{
    <div class="row" style="min-width: 800px;">
        <div class="col-xs-6">
            <div style="float: right;">
                <a class="btn btn-sm btn-primary" href="@Url.Action("Items", "Folder", new { id = ((CorporateContacts.Domain.Entities.CCFolder)Session["folderDetail"]).FolderID })">
                    <i class="icon-undo align-top bigger-125"></i>
                    Back
                </a>
                <a class="btn btn-sm btn-primary" href="@Url.Action("Home","Index", "Admin")">
                    <i class="icon-home align-top bigger-125"></i>
                    Home
                </a>
            </div>
            <div style="margin-bottom: 10px;" class="page-header">
                <h1>Categories - @Model[1].Value</h1>
            </div>
            <div class="table-header">@Model[0].Value </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var itemValue in Model)
                        {
                            if (itemValue.FieldID == -1)
                            {
                            <tr>

                                <td>@itemValue.Value2 </td>
                                <td>@itemValue.Value </td>

                            </tr>   
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <br />
    <p class="alert alert-warning">
        No Distribution List found 
    </p> 
    <div class="row" style="margin-top: 15px; margin-bottom: 15px;">
        <div class="col-xs-12">
            <div style="float: right;">
                <a class="btn btn-sm btn-primary" href="@Url.Action("Items", "Folder", new { id = ((CorporateContacts.Domain.Entities.CCFolder)Session["folderDetail"]).FolderID })">
                    <i class="icon-undo align-top bigger-125"></i>
                    Back
                </a>
                <a class="btn btn-sm btn-primary" href="@Url.Action("Index", "Admin")">
                    <i class="icon-home align-top bigger-125"></i>
                    Home
                </a>
            </div>
        </div>
    </div>
}
