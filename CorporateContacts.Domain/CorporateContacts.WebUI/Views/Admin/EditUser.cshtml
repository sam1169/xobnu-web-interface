<div class="col-sm-12">
    <div class="widget-box">
        <div class="widget-header widget-header-flat">
            <h4 class="smaller">
                <i class="icon-user smaller-80"></i>
                Edit @Model.FullName
            </h4>
        </div>

        <div class="widget-body">
            <div class="widget-main">
                <div class="row">
                    <div class="col-xs-12">
                        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
                        {

                            <div class="col-xs-12">
                                <div class="form-group">

                                    <label class="block clearfix ">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(m => m.FullName, new { placeholder = "Full Name", @class = "form-control" })
                                            <i class=" icon-user"></i>
                                        </span>
                                    </label>
                                    <label class="block clearfix ">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                            <i class=" icon-envelope"></i>
                                        </span>
                                    </label>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", onblur = "if(this.value=='')this.value='Password'", onfocus = "if(this.value=='Password')this.value='' " })
                                            <i class="icon-lock"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control", onblur = "if(this.value=='')this.value='Password'", onfocus = "if(this.value=='Password')this.value='' " })
                                            <i class="icon-retweet"></i>
                                        </span>
                                    </label>
                                    @*<label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.DropDownListFor(model => model.UserType, new SelectList(new List<SelectListItem>{ new SelectListItem
                                                    {
                                                        Value = "0",
                                                        Text = "User"
                                                    },new SelectListItem
                                                    {
                                                        Value = "1",
                                                        Text = "Admin"
                                                    }
                                                    }, "Value", "Text"), "-- Please select type --", new { @class = "form-control" })

                                        </span>
                                    </label>*@
                                    <div style="color: red;">
                                        @Html.ValidationSummary()
                                    </div>

                                </div>
                                <div class="clearfix ">

                                    <button class="btn btn-sm btn-primary" type="submit">
                                        <i class="icon-save  bigger-110"></i>
                                        Save
                                    </button>

                                     <a class="btn btn-sm btn-primary" href="@Url.Action("AccountOptions", "Admin")">
                                        <i class="icon-user align-top bigger-125"></i>
                                       View Users
                                    </a>

                                    <button class="btn btn-sm" type="reset">
                                        <i class="icon-undo bigger-110"></i>
                                        Clear
                                    </button>

                                    <a class="btn btn-sm btn-primary" href="@Url.Action("AccountOptions", "Admin")">
                                        <i class="icon-hand-left align-top bigger-125"></i>
                                        Back
                                    </a>

                                </div>

                            </div>
    
                        }

                    </div>
                </div>



                <hr>
            </div>
        </div>
    </div>
</div>
