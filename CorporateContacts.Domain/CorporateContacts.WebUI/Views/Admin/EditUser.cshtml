@model CorporateContacts.Domain.Entities.User

@{
    ViewBag.Title = "Edit User";
    ViewBag.PageHeader = "Edit User : " + Model.FullName;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script>
    $('.breadcrumb').html('<li><i class="icon-home home-icon"></i>@Html.ActionLink("Home","Index","Admin")</li><li><a href="/Admin/AccountOptions/">Account</a></li><li class="active">Edit User</li>');
</script>

