@model IEnumerable<CorporateContacts.Domain.Entities.User>
@{
    ViewBag.Title = "Users";
    ViewBag.PageHeader = "User List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $('.breadcrumb').html('<li><i class="icon-home home-icon"></i>@Html.ActionLink("Home","Index","Admin")</li><li><a href="/Admin/Account/">Account</a></li><li class="active">Users</li>');
</script>

<div class="row">
    <div class="col-xs-12">    
            <div style="float: left;">
                <a class="btn btn-sm btn-primary" href="@Url.Action("NewUser", "Admin")">
                    <i class="icon-plus-sign align-top bigger-125"></i>
                    Add New User
                </a>
              
            </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName </td>
                            <td>@user.Email</td>
                            <td>@user.UserType</td>
                            <td>@user.Status</td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteUser", new { ID = user.ID }, new { @class = "btn btn-xs btn-primary" })
                                @Html.ActionLink("Edit", "EditUser", new { ID = user.ID }, new { @class = "btn btn-xs btn-primary" })

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
