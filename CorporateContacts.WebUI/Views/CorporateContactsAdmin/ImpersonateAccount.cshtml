<div class="row">
    <div class="form-group col-sm-12">
        <div class="table-responsive">
            <table id="table-account-list" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Account Name</th>
                        <th>Email</th>
                        <th>Date Created</th>
                        <th>Usage</th>
                        <th>Impersonate Account</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model.listOfAccounts)
                    {
                        <tr>
                            <td>@acc.AccountName</td>
                            <td>@acc.Email</td>
                            <td>@acc.DateCreated</td>
                            <td>@acc.Usgae</td>
                            <td><a href="@Url.Action("ImpersonatedAccount", "CorporateContactsAdmin", new { AccID = acc.AccountID })">Access</a></td>
                            <td>-</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    </div>

