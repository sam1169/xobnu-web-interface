<script>

    $(document).ready(function () {
        // Handler for .ready() called.
    });

    $("#btnsendme123").click(function () {

        var _email = $("#txtemail").val()

        $.ajax({
            url: '@Url.Action("SendPassword", "SignUp")',
            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            async: false,
            data: { email: _email }, //JSON.stringify(recruiter),
            success: function (result) {
                alert('sucess');
